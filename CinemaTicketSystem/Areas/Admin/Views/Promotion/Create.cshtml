@model CinemaTicketSystem.Models.Promotion
@{
    ViewData["Title"] = "Add Promotion";
}

<div class="container py-5">
    <h2 class="fw-bold mb-4 text-center">➕ Add New Promotion</h2>

    <form asp-action="Create" method="post" class="shadow p-4 bg-white rounded">
        <div class="mb-3">
            <label asp-for="Code" class="form-label fw-semibold"></label>
            <input asp-for="Code" class="form-control" placeholder="Enter promo code..." />
            <span asp-validation-for="Code" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="DiscountPercent" class="form-label fw-semibold"></label>
            <input asp-for="DiscountPercent" type="number" class="form-control" placeholder="Enter discount %" />
            <span asp-validation-for="DiscountPercent" class="text-danger"></span>
        </div>

        <div class="mb-3 row">
            <div class="col-md-6">
                <label asp-for="StartDate" class="form-label fw-semibold"></label>
                <input asp-for="StartDate" type="date" class="form-control" />
            </div>
            <div class="col-md-6">
                <label asp-for="EndDate" class="form-label fw-semibold"></label>
                <input asp-for="EndDate" type="date" class="form-control" />
            </div>
        </div>

        <div class="form-check mb-3">
            <input asp-for="IsActive" class="form-check-input" />
            <label asp-for="IsActive" class="form-check-label fw-semibold">Active</label>
        </div>

        <div class="text-center">
            <button type="submit" class="btn btn-success px-4">Save</button>
            <a asp-action="Index" class="btn btn-secondary px-4 ms-2">Cancel</a>
        </div>
    </form>
</div>

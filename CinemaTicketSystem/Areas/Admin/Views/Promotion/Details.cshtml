@model CinemaTicketSystem.Models.Promotion
@{
    ViewData["Title"] = "Promotion Details";
}

<div class="container py-5">
    <div class="card shadow-lg border-0">
        <div class="card-body">
            <h2 class="fw-bold mb-4 text-center">🎟️ Promotion Details</h2>

            <dl class="row">
                <dt class="col-sm-3">Promo Code:</dt>
                <dd class="col-sm-9">@Model.Code</dd>

                <dt class="col-sm-3">Discount:</dt>
                <dd class="col-sm-9">@Model.DiscountPercent %</dd>

                <dt class="col-sm-3">Start Date:</dt>
                <dd class="col-sm-9">@Model.StartDate.ToShortDateString()</dd>

                <dt class="col-sm-3">End Date:</dt>
                <dd class="col-sm-9">@Model.EndDate.ToShortDateString()</dd>

                <dt class="col-sm-3">Status:</dt>
                <dd class="col-sm-9">
                    @if (Model.IsActive)
                    {
                        <span class="badge bg-success">Active</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">Inactive</span>
                    }
                </dd>
            </dl>

            <div class="text-center mt-4">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning px-4">Edit</a>
                <a asp-action="Index" class="btn btn-secondary px-4 ms-2">Back</a>
            </div>
        </div>
    </div>
</div>

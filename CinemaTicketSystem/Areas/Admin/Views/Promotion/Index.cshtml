@model IEnumerable<CinemaTicketSystem.Models.Promotion>
@{
    ViewData["Title"] = "Promotion";
}

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold">  Promotions List</h2>
        <a asp-action="Create" class="btn btn-success">
              Add New Promotion
        </a>
    </div>

    <table class="table table-striped table-bordered shadow-sm">
        <thead class="table-dark text-center">
            <tr>
                <th>Promo Code</th>
                <th>Discount (%)</th>
                <th>Start Date</th>
                <th>End Date</th>
                <th>Status</th>
                <th style="width: 180px;">Actions</th>
            </tr>
        </thead>
        <tbody class="text-center align-middle">
            @foreach (var promo in Model)
            {
                <tr>
                    <td class="fw-semibold">@promo.Code</td>
                    <td>@promo.DiscountPercent %</td>
                    <td>@promo.StartDate.ToShortDateString()</td>
                    <td>@promo.EndDate.ToShortDateString()</td>
                    <td>
                        @if (promo.IsActive)
                        {
                            <span class="badge bg-success">Active</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">Inactive</span>
                        }
                    </td>
                    <td>
                        <a asp-action="Details" asp-route-id="@promo.Id" class="btn btn-sm btn-info text-white">View</a>
                        <a asp-action="Edit" asp-route-id="@promo.Id" class="btn btn-sm btn-warning">Edit</a>
                        <a asp-action="Delete" asp-route-id="@promo.Id" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

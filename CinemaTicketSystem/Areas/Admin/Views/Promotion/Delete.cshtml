@model CinemaTicketSystem.Models.Promotion
@{
    ViewData["Title"] = "Delete Promotion";
}

<div class="container py-5">
    <div class="card shadow-lg border-danger">
        <div class="card-body text-center">
            <h2 class="fw-bold text-danger mb-4">⚠️ Delete Promotion</h2>
            <p>Are you sure you want to delete this promotion?</p>

            <h4 class="fw-semibold">@Model.Code</h4>
            <p>Discount: @Model.DiscountPercent %</p>

            <form asp-action="DeleteConfirmed" method="post">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger px-4">Yes, Delete</button>
                <a asp-action="Index" class="btn btn-secondary px-4 ms-2">Cancel</a>
            </form>
        </div>
    </div>
</div>

@model CinemaTicketSystem.Models.Cinema

<div class="container">
    <div class="row mb-3 align-items-center my-3">
        <div class="col-md-6">
            <h2 class="display-6">Edit Cinema</h2>
        </div>
    </div>

    <div class="row my-3">
        <div class="col-12">
            <form method="post" enctype="multipart/form-data">
                <input type="hidden" asp-for="CinemaId" />

                <div class="mb-3">
                    <label for="name" class="form-label">Name</label>
                    <input class="form-control" asp-for="Name" />
                    <span class="text-danger" asp-validation-for="Name"></span>
                </div>

                <div class="mb-3">
                    <label for="NewImg" class="form-label">Cinema Image</label>
                    <input type="file" class="form-control" name="NewImg" accept="image/*" onchange="previewImage(event)" />
                    <span class="text-danger" asp-validation-for="Img"></span>
                </div>

                <div class="mb-3">
                    @if (!string.IsNullOrEmpty(Model.Img))
                    {
                        <img id="preview"
                             src="~/CinemaImages/@Model.Img"
                             alt="Current Image"
                             style="max-width:200px; border:1px solid #ccc; border-radius:10px; padding:5px;" />
                    }
                    else
                    {
                        <img id="preview"
                             alt="Preview"
                             style="max-width:200px; display:none; border:1px solid #ccc; border-radius:10px; padding:5px;" />
                    }
                </div>

                <button type="submit" class="btn btn-primary">Update</button>
                <a href="/Admin/Cinema" class="btn btn-secondary">Back to List</a>
            </form>
        </div>
    </div>
</div>

<script>
    function previewImage(event) {
        const input = event.target;
        const preview = document.getElementById("preview");
        if (input.files && input.files[0]) {
            const reader = new FileReader();
            reader.onload = function (e) {
                preview.src = e.target.result;
                preview.style.display = "block";
            };
            reader.readAsDataURL(input.files[0]);
        }
    }
</script>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

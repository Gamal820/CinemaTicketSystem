@model CinemaTicketSystem.Models.Actor

@{
    ViewData["Title"] = "Create New Actor";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-body p-4">
                    <h2 class="text-center mb-4 fw-bold text-primary">Create New Actor</h2>

                    <form asp-action="Create" enctype="multipart/form-data">
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label fw-semibold"></label>
                            <input asp-for="Name" class="form-control" placeholder="Enter actor name" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Bio" class="form-label fw-semibold"></label>
                            <textarea asp-for="Bio" class="form-control" rows="3" placeholder="Short biography"></textarea>
                            <span asp-validation-for="Bio" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-semibold">Actor Image</label>
                            <input type="file" name="ImgFile" class="form-control" />
                        </div>

                        <div class="d-flex justify-content-between">
                            <a href="/Admin/Actor/Index" class="btn btn-secondary px-4">Back</a>
                            <button type="submit" class="btn btn-success px-4">Create</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <partial name="_NotificationPartial" />
}

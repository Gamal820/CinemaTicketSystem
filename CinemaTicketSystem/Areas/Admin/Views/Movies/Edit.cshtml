@model CinemaTicketSystem.ViewModels.MovieVM

@{
    ViewData["Title"] = "Edit Movie";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-body p-4">
                    <h2 class="text-center mb-4 fw-bold text-warning">Edit Movie</h2>

                    <form asp-action="Edit" enctype="multipart/form-data">
                        <input type="hidden" asp-for="Movie.Id" />

                        <div class="mb-3">
                            <label asp-for="Movie.Name" class="form-label fw-semibold"></label>
                            <input asp-for="Movie.Name" class="form-control" />
                            <span asp-validation-for="Movie.Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Movie.Description" class="form-label fw-semibold"></label>
                            <textarea asp-for="Movie.Description" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Movie.Description" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Movie.Price" class="form-label fw-semibold"></label>
                            <input asp-for="Movie.Price" class="form-control" type="number" step="0.01" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-semibold">Current Main Image</label>
                            @if (!string.IsNullOrEmpty(Model.Movie!.MainImg))
                            {
                                <div class="mb-2">
                                    <img src="~/images/movies/@Model.Movie.MainImg" class="img-thumbnail" style="max-height:150px;" />
                                </div>
                            }
                            <input type="file" name="MainImgFile" class="form-control" />


                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-semibold">Sub Images</label>
                            <input type="file" name="SubImgs" class="form-control" multiple />
                            @if (Model.Movie.MovieSubImages != null && Model.Movie.MovieSubImages.Any())
                            {
                                <div class="d-flex flex-wrap mt-2 gap-3">
                                    @foreach (var img in Model.Movie.MovieSubImages)
                                    {
                                        <div class="position-relative" style="width:150px;">
                                            <img src="~/images/movies/Sub/@img.Img"
                                                 class="img-thumbnail shadow-sm"
                                                 style="width:150px; height:120px; object-fit:cover; border-radius:10px;" />
                                            <a href="/Admin/Movies/DeleteSubImg?movieId=@Model.Movie.Id&img=@img.Img"
                                               class="btn btn-sm btn-danger rounded-circle position-absolute top-0 end-0 translate-middle"
                                               style="width:25px; height:25px; line-height:1; padding:0; font-size:14px;">×</a>
                                        </div>
                                    }
                                </div>
                            }
                        </div>


                        <div class="mb-3">
                            <label asp-for="Movie.DateTime" class="form-label fw-semibold">Release Date</label>
                            <input asp-for="Movie.DateTime" type="date" class="form-control" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-semibold">Category</label>
                            <select asp-for="Movie.CategoryId" class="form-select">
                                @foreach (var item in Model.Categories!)
                                {
                                    <option value="@item.CategoryId" selected="@(item.CategoryId == Model.Movie.CategoryId)">
                                        @item.Name
                                    </option>
                                }
                            </select>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-semibold">Cinema</label>
                            <select asp-for="Movie.CinemaId" class="form-select">
                                @foreach (var item in Model.Cinemas!)
                                {
                                    <option value="@item.CinemaId" selected="@(item.CinemaId == Model.Movie.CinemaId)">
                                        @item.Name
                                    </option>
                                }
                            </select>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-semibold">Actors</label>
                            <select name="SelectedActors" class="form-select" multiple>
                                @foreach (var actor in Model.Actors)
                                {
                                    @if (Model.SelectedActors != null && Model.SelectedActors.Contains(actor.Id))
                                    {
                                        <option value="@actor.Id" selected>@actor.Name</option>
                                    }
                                    else
                                    {
                                        <option value="@actor.Id">@actor.Name</option>
                                    }
                                }
                            </select>


                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-semibold">Status</label>
                            <select asp-for="Movie.Status" class="form-select">
                                <option value="true" selected="@Model.Movie.Status">Active</option>
                                <option value="false" selected="!@Model.Movie.Status">Inactive</option>
                            </select>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a href="/Admin/Movies/Index" class="btn btn-secondary px-4">Back</a>
                            <button type="submit" class="btn btn-warning px-4">Update</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <partial name="_NotificationPartial" />
}

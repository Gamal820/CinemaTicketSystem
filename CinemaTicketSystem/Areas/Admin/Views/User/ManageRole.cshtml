@model CinemaTicketSystem.ViewModels.ManageRoleVM

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-4 p-4">
        <h3 class="text-center mb-4 text-primary">
            <i class="bi bi-person-gear"></i> Edit Role for <strong>@Model.UserName</strong>
        </h3>

        <form method="post">
    <input type="hidden" name="UserId" value="@Model.UserId" />

   <div class="mb-3">
    <label class="form-label fw-semibold">Select Role</label>
    <select name="NewRole" class="form-select">
        @foreach (var role in Model.AllRoles)
        {
            var isSelected = role == Model.CurrentRole ? "selected" : "";
                        <option value="@role" selected="@(role == Model.CurrentRole ? "selected" : null)">
                            @role
                        </option>

        }
    </select>
</div>

<div class="text-center">
    <button type="submit" class="btn btn-success px-4">
        <i class="bi bi-check-circle"></i> Save
    </button>
</div>

</form>

    </div>
</div>

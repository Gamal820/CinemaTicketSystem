@model CinemaTicketSystem.ViewModels.ForgetPasswordVM

@{
    ViewData["Title"] = "Forget Password";
}

<div class="container py-5 d-flex justify-content-center align-items-center" style="min-height: 80vh;">
    <div class="card shadow-lg border-0 rounded-4 p-4" style="max-width: 500px; width: 100%;">
        <h2 class="text-center text-primary fw-bold mb-4">🔐 Forget Password</h2>
        <p class="text-center text-muted mb-4">Enter your username or email to reset your password.</p>

        @if (TempData["success-message"] != null)
        {
            <div class="alert alert-success text-center">
                @TempData["success-message"]
            </div>
        }

        @if (TempData["error-message"] != null)
        {
            <div class="alert alert-danger text-center">
                @TempData["error-message"]
            </div>
        }

        <form asp-action="ForgetPassword" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-3">
                <label asp-for="UserNameOREmail" class="form-label fw-semibold"></label>
                <input asp-for="UserNameOREmail" class="form-control form-control-lg" placeholder="Enter your username or email" />
                <span asp-validation-for="UserNameOREmail" class="text-danger small"></span>
            </div>

            <button type="submit" class="btn btn-primary w-100 py-2 fw-bold">Send OTP</button>

            <div class="text-center mt-3">
                <a asp-action="Login" class="text-decoration-none">← Back to Login</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

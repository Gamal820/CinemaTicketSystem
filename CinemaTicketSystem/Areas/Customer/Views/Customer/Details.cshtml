@model Movie
@{
    ViewData["Title"] = @Model.Name;
}

<section class="container my-5">
    <div class="row g-4 align-items-start">
        <!-- الصورة الرئيسية + الصور الفرعية -->
        <div class="col-md-6 text-center">
            <!-- Carousel للصور -->
            <div id="movieCarousel" class="carousel slide shadow rounded" data-bs-ride="carousel">
                <div class="carousel-inner">
                    <!-- الصورة الرئيسية -->
                    <div class="carousel-item active">
                        <img src="~/images/movies/@Model.MainImg"
                             class="d-block w-100 rounded"
                             alt="@Model.Name"
                             style="max-height: 450px; object-fit: cover; background-color: #000;" />
                    </div>

                    <!-- الصور الفرعية -->
                    @if (Model.MovieSubImages != null && Model.MovieSubImages.Any())
                    {
                        foreach (var img in Model.MovieSubImages)
                        {
                            <div class="carousel-item">
                                <img src="~/images/movies/sub/@img.Img"
                                     class="d-block w-100 rounded"
                                     alt="Sub Image"
                                     style="max-height: 450px; object-fit: cover; background-color: #000;" />
                            </div>
                        }
                    }
                </div>

                <!-- أزرار التنقل -->
                <button class="carousel-control-prev" type="button" data-bs-target="#movieCarousel" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#movieCarousel" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>

                <!-- المؤشرات -->
                <div class="carousel-indicators mt-3">
                    <button type="button" data-bs-target="#movieCarousel" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Main"></button>
                    @if (Model.MovieSubImages != null && Model.MovieSubImages.Any())
                    {
                        int index = 1;
                        foreach (var img in Model.MovieSubImages)
                        {
                            <button type="button" data-bs-target="#movieCarousel" data-bs-slide-to="@index" aria-label="Sub @index"></button>
                            ;
                            index++;
                        }
                    }
                </div>
            </div>
        </div>

        <!-- تفاصيل الفيلم -->
        <div class="col-md-6">
            <h2 class="fw-bold mb-3">@Model.Name</h2>
            <p class="mb-2"><strong>🎭 Category:</strong> @Model.Category?.Name</p>
            <p class="mb-2"><strong>🏢 Cinema:</strong> @Model.Cinema?.Name</p>
            <p class="mb-2"><strong>💰 Price:</strong> @Model.Price.ToString("C")</p>

            <hr />

            <p class="mt-3 text-muted" style="font-size: 1.05rem;">@Model.Description</p>

            <!-- الأزرار -->
            <div class="mt-4 d-flex gap-3">
                <form asp-action="AddToCart" asp-controller="Cart" method="post">
                    <input type="hidden" name="movieId" value="@Model.Id" />
                    <button type="submit" class="btn btn-primary btn-lg flex-fill">
                        🛒 Add to Cart
                    </button>
                </form>

                <a href="/Customer/Customer/Index" class="btn btn-outline-secondary btn-lg flex-fill">
                    ⬅ Back to List
                </a>
            </div>
        </div>
    </div>
</section>

<style>
    body {
        background-color: #f9f9f9;
    }

    .carousel {
        border-radius: 15px;
        overflow: hidden;
    }

    .carousel-indicators [data-bs-target] {
        background-color: #333;
    }

    .carousel-control-prev-icon,
    .carousel-control-next-icon {
        filter: invert(1);
    }

    .btn-primary {
        background-color: #007bff;
        border: none;
        transition: 0.3s;
    }

        .btn-primary:hover {
            background-color: #0056b3;
            transform: scale(1.03);
        }
</style>
